<!-- settings.html -->
  <div class="container mt-4">
  <h2>🔧 Hesap Ayarları</h2>

  <form method="POST" class="mt-4">
    <div class="mb-3">
      <label for="username" class="form-label">Kullanıcı Adı</label>
      <input type="text" class="form-control" name="username" id="username" value="{{ user.username }}">
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">E-posta</label>
      <input type="email" class="form-control" name="email" id="email" value="{{ user.email or '' }}">
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
  </form>

  <hr class="my-4">

  <div>
    <h5>Şifre Değiştir</h5>
    <button type="button" class="btn btn-outline-secondary" id="link-change-password">Şifre Değiştir</button>
  </div>

  <hr class="my-4">

  <div>
    <h5>Hesabı Kapat</h5>
    <form method="POST" action="{{ url_for('dashboard.settings') }}" class="mt-4">
      <button type="submit" class="btn btn-danger">Hesabımı Sil</button>
    </form>
  </div>
</div>


