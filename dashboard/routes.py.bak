def get_items_by_tag(tag_id):
    tag = Tag.query.filter_by(id=tag_id, user_id=current_user.id).first_or_404()

    # HATA DÃœZELTME: with_parent() yanlÄ±ÅŸ kullanÄ±lmÄ±ÅŸtÄ±.
